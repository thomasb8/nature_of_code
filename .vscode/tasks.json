{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Run Sketch",
        "type": "shell",
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "command": "${config:processing.path}",
        "presentation": {
          "echo": true,
          "reveal": "always",
          "focus": false,
          "panel": "dedicated"
        },
        "args": [
          "--force",
          "--sketch=${fileDirname}",
          "--output=${fileDirname}/out",
          "--run"
        ],
        "windows": {
          "type": "process",
          "args": [
            "--force",
            {
              "value": "--sketch=${fileDirname}",
              "quoting": "strong"
            },
            {
              "value": "--output=${fileDirname}\\out",
              "quoting": "strong"
            },
            "--run"
          ]
        }
      }
    ]
  }